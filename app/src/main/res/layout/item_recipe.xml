<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginHorizontal="@dimen/space4"
    android:layout_marginVertical="@dimen/space8"
    android:background="@drawable/custom_gradient"
    app:cardCornerRadius="@dimen/space8"
    tools:context=".ui.search.SearchFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/favorite_recipe_shape"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="@dimen/space8"
            android:textAlignment="center"
            android:textColor="@color/background" />

    </FrameLayout>

</androidx.cardview.widget.CardView>

